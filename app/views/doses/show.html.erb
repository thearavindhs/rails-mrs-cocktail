<div class="container">
<h3><%= @cocktail.name %></h3>
</div>
<div class="container">
<% if not @cocktail.doses.empty? %>
  <ul>
      <% @cocktail.doses.each do |dose|%>
         <li>
            <%= dose.description %> <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash"></i>
            <% end %>
          </li>
      <% end %>
  </ul>
<% end %>
</div>
